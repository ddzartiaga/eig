@section scripts
{
	<script type="text/x-template" id="interest-group-item-template">
		<div class="col-lg-4 col-sm-6 portfolio-item">
			<div class="card h-100">
				<a :href="detailUrl"><img class="card-img-top" src="http://placehold.it/700x400" alt=""></a>
				<div class="card-body">
					<h4 class="card-title">
						<a :href="detailUrl">{{group.Name}}</a>
					</h4>
					<p class="card-text">{{group.Description}}</p>
				</div>
			</div>
		</div>
	</script>
	<script src="~/js/group-detail.js"></script>
}