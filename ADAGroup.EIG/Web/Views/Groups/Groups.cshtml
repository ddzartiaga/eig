@{
	ViewData["Title"] = "Interest Groups";
}

<div id="page">
	<section id="features" class="services-area pt-120">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-lg-10">
					<div class="section-title text-center pb-10">
						<div class="line m-auto"></div>
						<h3 class="title">Interest Groups <span>you can choose from</span></h3>
					</div> <!-- section title -->
				</div>
			</div> <!-- row -->
			<interest-group-item v-for="grp in groups" :group="grp"></interest-group-item>
		</div> <!-- container -->
	</section>
</div>


@section scripts
{
	<script type="text/x-template" id="interest-group-item-template">
		<div class="single-services text-center mt-30 p-2 wow fadeIn" data-wow-duration="1s" data-wow-delay="0.2s">
			<div class="row justify-content-center">
				<div class="col-lg-6 col-md-6 col-sm-12">
					<div class="services-icon">
						<img id="group-photo-banner" src="/images/Group_of_smiling_office_workers_or_business_people.jpg" />
					</div>
				</div> <!-- single services -->

				<div class="col-lg-6 col-md-6 col-sm-12">
					<div class="services-content mt-sm-30 text-left">
						<h4 class="services-title"><a href="#">{{group.Name}}</a></h4>
						<p class="text">{{group.Description}}</p>
						<a class="main-btn" style="width: 100%" :href="detailUrl">Learn More <i class="lni lni-chevron-right"></i></a>
					</div>
				</div>
			</div>
		</div>
	</script>
	<script src="~/js/app/groups-list.js"></script>
}
