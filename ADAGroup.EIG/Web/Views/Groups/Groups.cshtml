@{
	ViewData["Title"] = "Interest Groups";
}

<div id="page">
	<section id="features" class="services-area pt-120">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-lg-10">
					<div class="section-title text-center pb-10">
						<div class="line m-auto"></div>
						<h3 class="title">Interest Groups <span>you can choose from</span></h3>
					</div> <!-- section title -->
				</div>
			</div> <!-- row -->
			<div class="row justify-content-center">
				<div class="col-lg-12 col-md-12 col-sm-12 text-center mt-4" v-if="groups.length === 0">
					<h4>No Available Groups, come back soon!</h4>
					<img style="height: 300px;" src="/images/no-reults.png" alt="No Available Groups" />
				</div>
				<div class="col-lg-12 col-md-12 col-sm-12" v-else>
					<interest-group-item v-for="grp in groups" :group="grp"></interest-group-item>
				</div>
			</div>
			
		</div> <!-- container -->
	</section>
</div>


@section scripts
{
	<script type="text/x-template" id="interest-group-item-template">
		<div class="single-services shadow mt-30 p-2 wow fadeIn groups-list" data-wow-duration="1s" data-wow-delay="0.2s">
			<div class="row">
				<div class="col-lg-8 col-md-12 col-sm-12">
					<div class="services-icon">
						<img class="group-photo-banner" :src="banner" />
					</div>
				</div> <!-- single services -->

				<div class="col-lg-4 col-md-12 col-sm-12">
					<div class="services-content text-left">
						<h4 class="services-title mt-md-2 mt-sm-2"><a href="#">{{group.Name}}</a></h4>
						<br />
						<div style="height: 300px; overflow-y: auto;">
							<div><span class="text-uppercase font-weight-bold">Mission</span></div>
							<div>{{group.MIssion}}</div>
							<br />
							<div class="text-uppercase font-weight-bold">Goal and Purpose</div>
							<div>{{group.GoalAndPurpose}}</div>
						</div>
						
						<div class="mt-3">
							<a class="main-btn w-100 my-1" :href="detailUrl">Learn More <i class="lni lni-chevron-right"></i></a>
							<a class="secondary-btn w-100 my-1" :href="group.JoinLink" target="_blank">Request to Join</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</script>
	<script src="~/js/app/groups-list.js"></script>
}
