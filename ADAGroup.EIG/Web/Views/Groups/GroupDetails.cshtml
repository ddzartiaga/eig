@section scripts
{
	<script type="text/x-template" id="interest-group-item-template">
		
	</script>
	<script type="text/x-template" id="interest-group-faq-item-template">
		<article class="accordion">
			<div class="accordion-head">
				<span>{{question}}</span>
				<span class="icon">
					<i class="icon fa fa-chevron-right"></i>
				</span>
			</div>
			<div class="accordion-body">
				<div class="content">
					<p>
						{{answer}}
					</p>
				</div>
			</div>
		</article>
	</script>
	<script type="text/x-template" id="interest-group-officers-template">
		<div class="col-lg-3 col-md-4 col-sm-12 officer-card">
			<div class="single-team text-center mt-30 wow fadeIn p-3" data-wow-duration="1s" data-wow-delay="0.2s">
				<div class="team-image">
					<img class="profile-pic" :src="officer.ProfilePic" alt="Profile Picture">
				</div>
				<div class="team-content p-0">
					<h5 class="holder-name mt-3" style="height: 50px;">{{name}}</h5>
					<div class="section-heading text-center">
						<p class="text">{{role}}</p>
						<p class="text font-italic">{{email ?? "No Email Provided"}}</p>
					</div>
				</div>
			</div>
		</div>
	</script>
	<script type="text/x-template" id="group-events-item-template">
		<div class="col-lg-4 col-md-12 event-card">
			<div class="single-blog mt-30 wow fadeIn shadow p-4" data-wow-duration="1s" data-wow-delay="0.8s">
				<img class="event-card-banner" :src="banner" alt="Event Banner">
				<div class="blog-content">
					<p class="event-name" style="font-size: 1.5rem;">{{evt.Name}}</p>
					<p class="meta"><i class="lni lni-calendar mr-2" style="color: #33c8c1"></i><span style="width: 60px">Starts:</span>{{evt.StartDate}}</p>
					<p class="meta"><i class="lni lni-calendar mr-2" style="color: #33c8c1"></i><span style="width: 60px">Ends:</span>{{evt.EndDate ?? "N/A"}}</p>
					<p class="meta"><i class="lni lni-map-marker mr-2" style="color: #33c8c1"></i>{{evt.Venue}}</p>
					<a class="secondary-btn my-2" :href="detailsUrl" style="width: 100%">Learn More <i class="lni lni-chevron-right"></i></a>
				</div>
			</div>
		</div>
	</script>
	<script src="~/js/app/group-detail.js"></script>
}