@{
	ViewData["Title"] = "Group Detail";
}

<div>
	<input type="hidden" id="gId" value="@ViewBag.GroupId" />
</div>
<div id="page">
	<section class="about-area pt-50">
		<div class="container group-detail">
			<div class="row justify-content-center align-content-center ">
				<div class="col-md-12 col-sm-12">
					<div class="about-image text-center mt-50 wow fadeInRightBig" data-wow-duration="1s" data-wow-delay="0.5s">
						<img class="group-banner-photo" :src="banner" />
					</div> <!-- about image -->
				</div>
			</div>
			<div class="row justify-content-center align-content-center">
				<div class="col-lg-8 col-md-8 col-sm-12">
					<div class="blog-content mt-50 wow fadeInLeftBig" data-wow-duration="1s" data-wow-delay="0.5s">
						<div class="section-title">
							<div class="line"></div>
							<h3 class="title"><span>About </span> {{details.Name}}</h3>
						</div> <!-- section title -->
						<p class="text">
							{{details.Description}}
						</p>
						<br />
						<h5>Mission</h5>
						<div class="accordion-text">
							<p>{{details.MIssion}}</p>
						</div>
						<br />
						<h5>Goal and Purpose</h5>
						<div class="accordion-text">
							<p>{{details.GoalAndPurpose}}</p>
						</div>
					</div> <!-- about content -->
				</div>
				<div class="col-lg-4 col-md-4 col-sm-12">
					<div class="about-image text-center justify-content-center mt-50 wow fadeInRightBig" data-wow-duration="1s" data-wow-delay="0.5s">
						<a class="secondary-btn w-100 my-1" target="_blank" :href="details.JoinLink">Request to Join</a>
						<img class="group-detail-logo mt-3" :src="logo" alt="Group Logo" />
					</div> <!-- about image -->

				</div>

			</div> <!-- row -->
		</div> <!-- container -->
	</section>
	<section class="about-area pt-50">
		<div class="container group-detail">
			<div class="row justify-content-center align-content-center">
				<div class="col-lg-12 col-md-12 col-sm-12">
					<div class="wow fadeInUpBig" data-wow-duration="1s" data-wow-delay="0.5s">
						<h5>More Information</h5>
						<div class="accordion-text">
							<p>{{details.Details}}</p>
						</div>
					</div> <!-- about content -->
				</div>
			</div> <!-- row -->
		</div> <!-- container -->
	</section>
