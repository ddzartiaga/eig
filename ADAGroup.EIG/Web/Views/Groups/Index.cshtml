@{
	ViewData["Title"] = "Interest Groups";
}

<div id="page">
	<section class="group-vector">
		<img src="~/images/concept-of-the-coworking-center.jpg" />
	</section>
	<section id="features" class="services-area pt-120">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-lg-10">
					<div class="section-title text-center pb-40">
						<div class="line m-auto"></div>
						<h3 class="title">Interest Groups, <span> interested? Click the logo to see the details.</span></h3>
					</div> <!-- section title -->
				</div>
			</div> <!-- row -->
			<div class="row justify-content-center">
				<interest-group-item v-for="grp in groups" :group="grp"></interest-group-item>

			</div> <!-- row -->
		</div> <!-- container -->
	</section>
</div>


@section scripts
{
	<script type="text/x-template" id="interest-group-item-template">

		<div class="col-lg-12 col-md-12 col-sm-12">
			<div class="single-services text-center mt-30 wow fadeIn" data-wow-duration="1s" data-wow-delay="0.2s">
				<div class="row">
					<div class="col-lg-3">
						<div class="services-icon">
							<img class="shape" :src="logo" alt="shape">
						</div>
						<a class="btn btn-danger more" :href="detailUrl">Learn More <i class="lni lni-chevron-right"></i></a>
					</div>
					<div class="col-lg-9">
						<div class="services-content" style="text-align: left !important">
							<h5 class="services-title"><a href="#">{{group.Name}}</a></h5>
							<p class="text">{{group.Description}}</p>
							
						</div>
					</div>
				</div>
			</div>
		</div>
	</script>
	<script src="~/js/app/groups-list.js"></script>
}
