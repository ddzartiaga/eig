@{
	ViewData["Title"] = "Home Page";
}
<div id="page">
	<div id="home" class="header-hero bg_cover">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-sm-12 col-lg-5">
					<div class="header-hero-content text-center">
						<h3 class="header-sub-title wow fadeInUp" data-wow-duration="1.3s" data-wow-delay="0.2s">Welcome to</h3>
						<h2 class="header-title wow fadeInUp" data-wow-duration="1.3s" data-wow-delay="0.5s">Employee Interest Groups (EIG)</h2>
						<p class="text wow fadeInUp" data-wow-duration="1.3s" data-wow-delay="0.8s">Have fun and collaborate with fellow Inforians and attain harmonious work-life at Infor. </p>
						<a href="#" class="main-btn wow fadeInUp" data-wow-duration="1.3s" data-wow-delay="1.1s">What is Infor EIG</a>
					</div> <!-- header hero content -->
				</div>
				<div class="col-sm-12 col-lg-7">
					<div class="header-hero-image text-center wow fadeIn" data-wow-duration="1.3s" data-wow-delay="1.4s">
						<img src="~/images/business-people.png" alt="hero" />
					</div> <!-- header hero image -->
				</div>
			</div> <!-- row -->
		</div> <!-- container -->
		<div id="particles-1" class="particles"></div>
	</div> <!-- header hero -->



	<section id="about" class="video-counter pt-30">
		<div class="container">
			<div class="row">
				<div class="col-lg-6">
					<div class="video-content mt-50 wow fadeIn" data-wow-duration="1s" data-wow-delay="0.5s">
						<img class="dots" src="~/images/dots.svg" alt="dots">
						<div class="video-wrapper">
							<div class="video-image">
								<img src="~/images/video.png" alt="video">
							</div>
							<div class="video-icon">
								<a href="https://www.youtube.com/watch?v=r44RKWyfcFw" class="video-popup"><i class="lni lni-play"></i></a>
							</div>
						</div> <!-- video wrapper -->
					</div> <!-- video content -->
				</div>
				<div class="col-lg-6">
					<div class="counter-wrapper mt-50 wow fadeIn" data-wow-duration="1s" data-wow-delay="0.8s">
						<div class="counter-content">
							<div class="section-title">
								<div class="line"></div>
								<h3 class="title"> <span>What's </span> Employee Interest Group (EIG) <span>?</span></h3>
							</div> <!-- section title -->
							<p class="text">Lorem ipsum dolor sit amet, consetetur sadipscing elitr, seiam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua.</p>
						</div> <!-- counter content -->
					</div> <!-- counter wrapper -->
				</div>
			</div> <!-- row -->
		</div> <!-- container -->
	</section>

	<br />
	<br />

	<section class="about-area pt-50">
		<div class="about-shape-2">
			<img src="~/images/about-shape-2.svg" alt="shape">
		</div>
		<div class="container">
			<div class="row">
				<div class="col-lg-6 order-lg-last">
					<div class="about-content mt-50 wow fadeInLeftBig" data-wow-duration="1s" data-wow-delay="0.5s">
						<div class="section-title">
							<div class="line"></div>
							<h3 class="title">Connect, Collaborate and Have Fun <span> with fellow Inforian.</span></h3>
						</div> <!-- section title -->
						<p class="text">
							This is an opportunity for you to expand your circle of friends and have fun with like minded workmates!
							We have different interest groups for the things you are passionate about.
							You may join group for sports, spirituality, music, dance, entreprenuership, outdoor activivities and many more!
						</p>
						<a href="/Groups" class="main-btn">View Interest Groups</a>
					</div> <!-- about content -->
				</div>
				<div class="col-lg-6 order-lg-first">
					<div class="about-image text-center mt-50 wow fadeInRightBig" data-wow-duration="1s" data-wow-delay="0.5s">
						<img src="~/images/about2.svg" alt="about">
					</div> <!-- about image -->
				</div>
			</div> <!-- row -->
		</div> <!-- container -->
	</section>

	<!--====== ABOUT PART START ======-->

	<section class="about-area pt-50">
		<div class="container">
			<div class="row">
				<div class="col-lg-6">
					<div class="about-content mt-50 wow fadeInLeftBig" data-wow-duration="1s" data-wow-delay="0.5s">
						<div class="section-title">
							<div class="line"></div>
							<h3 class="title"><span>Learn and Participate </span> in upcoming group events.</h3>
						</div> <!-- section title -->
						<p class="text">
							Learn from different workshops held by the interest groups.
							Discover new places or rediscover yourself!
							Improve you skills in photography, public speaking and many more.
						</p>
						<a href="/Activities" class="main-btn">View Upcoming Events</a>
					</div> <!-- about content -->
				</div>
				<div class="col-lg-6">
					<div class="about-image text-center mt-50 wow fadeInRightBig" data-wow-duration="1s" data-wow-delay="0.5s">
						<img src="~/images/about3.svg" alt="about">
					</div> <!-- about image -->
				</div>
			</div> <!-- row -->
		</div> <!-- container -->
		<div class="about-shape-1">
			<img src="~/images/about-shape-1.svg" alt="shape">
		</div>
	</section>

	<section id="features" class="services-area pt-120">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-lg-10">
					<div class="section-title text-center pb-40">
						<div class="line m-auto"></div>
						<h3 class="title"> <span> Here are all the </span> Interest Groups <span> in </span> Infor! </h3>
					</div> <!-- section title -->
				</div>
			</div> <!-- row -->
			<div class="row justify-content-center">
				<interest-group-item v-for="grp in groups" :group="grp"></interest-group-item>
			</div> <!-- row -->
		</div> <!-- container -->
	</section>

</div>


@section scripts
{
	<script type="text/x-template" id="interest-group-logo-template">

		<div class="col-lg-4 col-md-4 col-sm-6">
			<div class="single-services text-center mt-30 wow fadeIn" data-wow-duration="1s" data-wow-delay="0.2s">
				<div class="services-icon">
					<a :href="detailUrl">
						<img class="shape" :src="logo" alt="shape">
					</a>
				</div>
			</div> <!-- single services -->
		</div>
	</script>
	<script src="~/js/app/home.js"></script>
	<script type="text/javascript">

		$('.owl-carousel').owlCarousel({
			items: 3,
			loop: true,
			nav: false,
			dot: true,
			autoplay: true,
			slideTransition: 'linear',
			autoplayHoverPause: true,
			responsive: {
				0: {
					items: 1
				},
				600: {
					items: 2
				},
				1000: {
					items: 3
				}
			}
		});
	</script>

}
